{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Cluster Name",
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      }
    },
    "region": {
      "type": "string",
      "enum": ["eu-central-1", "eu-west-2", "ca-central-1", "sa-east-1", "us-east-1",
        "ap-northeast-1", "ap-northeast-2", "ap-south-1", "ap-southeast-1", "ap-southeast-2"]
    },
    "machineType": {
      "type": "string",
      "enum": ["m5.xlarge", "m5.2xlarge", "m5.4xlarge", "m5.8xlarge", "m5.12xlarge"]
    },
    "autoScalerMin": {
      "type": "integer",
      "description": "Specifies the minimum number of virtual machines to create per zone",
      "minimum": 1,
      "default": 1
    },
    "autoScalerMax": {
      "type": "integer",
      "description": "Specifies the maximum number of virtual machines to create per zone",
      "minimum": 1,
      "maximum": 40,
      "default": 10
    },
    "zonesCount": {
      "type": "integer",
      "description": "Specifies the number of availability zones for HA cluster",
      "minimum": 3,
      "maximum": 3,
      "default": 3
    }},
  "required": [
    "name"
  ],
  "_show_form_view": true,
  "_controlsOrder": [
    "name",
    "region",
    "machineType",
    "autoScalerMin",
    "autoScalerMax",
    "zonesCount"
  ]
}