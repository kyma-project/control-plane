{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region",
    "machineType",
    "autoScalerMin",
    "autoScalerMax"
  ],
  "_show_form_view": true,
  "properties": {
    "name": {
      "type": "string",
      "title": "Cluster Name",
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      }
    },
    "region": {
      "type": "string",
      "enum": ["eu-central-1", "eu-west-2", "ca-central-1", "sa-east-1", "us-east-1", "us-west-1",
        "ap-northeast-1", "ap-northeast-2", "ap-south-1", "ap-southeast-1", "ap-southeast-2"]
    },
    "machineType": {
      "type": "string",
      "enum": ["m6i.2xlarge", "m6i.4xlarge", "m6i.8xlarge", "m6i.12xlarge"]
    },
    "autoScalerMin": {
      "type": "integer",
      "description": "Specifies the minimum number of virtual machines to create",
      "minimum": 2,
      "default": 2
    },
    "autoScalerMax": {
      "type": "integer",
      "description": "Specifies the maximum number of virtual machines to create",
      "minimum": 2,
      "maximum": 40,
      "default": 10
    }},
  "required": [
    "name"
  ],
  "type": "object"
}