{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region",
    "machineType",
    "autoScalerMin",
    "autoScalerMax"
  ],
  "_show_form_view": true,
  "properties": {
    "autoScalerMax": {
      "default": 10,
      "description": "Specifies the maximum number of virtual machines to create",
      "maximum": 40,
      "minimum": 2,
      "type": "integer"
    },
    "autoScalerMin": {
      "default": 2,
      "description": "Specifies the minimum number of virtual machines to create",
      "minimum": 2,
      "type": "integer"
    },
    "machineType": {
      "enum": [
        "m6i.2xlarge",
        "m6i.4xlarge",
        "m6i.8xlarge",
        "m6i.12xlarge"
      ],
      "type": "string"
    },
    "name": {
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      },
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "title": "Cluster Name",
      "type": "string"
    },
    "region": {
      "enum": [
        "eu-central-1",
        "eu-west-2",
        "ca-central-1",
        "sa-east-1",
        "us-east-1",
        "us-west-1",
        "ap-northeast-1",
        "ap-northeast-2",
        "ap-south-1",
        "ap-southeast-1",
        "ap-southeast-2"
      ],
      "type": "string"
    }
  },
  "required": [
    "name"
  ],
  "type": "object"
}