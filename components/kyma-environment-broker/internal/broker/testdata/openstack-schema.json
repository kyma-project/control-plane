{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region",
    "machineType",
    "autoScalerMin",
    "autoScalerMax"
  ],
  "_show_form_view": true,
  "properties": {
    "autoScalerMax": {
      "default": 8,
      "description": "Specifies the maximum number of virtual machines to create",
      "maximum": 40,
      "minimum": 2,
      "type": "integer"
    },
    "autoScalerMin": {
      "default": 4,
      "description": "Specifies the minimum number of virtual machines to create",
      "minimum": 2,
      "type": "integer"
    },
    "machineType": {
      "enum": [
        "g_c4_m16",
        "g_c8_m32"
      ],
      "type": "string"
    },
    "name": {
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      },
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "title": "Cluster Name",
      "type": "string"
    },
    "region": {
      "enum": [
        "eu-de-1",
        "ap-sa-1"
      ],
      "type": "string"
    }
  },
  "required": [
    "name"
  ],
  "type": "object"
}