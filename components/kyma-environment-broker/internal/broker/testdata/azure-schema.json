{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region",
    "machineType",
    "autoScalerMin",
    "autoScalerMax"
  ],
  "_show_form_view": true,
  "properties": {
    "autoScalerMax": {
      "default": 20,
      "description": "Specifies the maximum number of virtual machines to create",
      "maximum": 80,
      "minimum": 2,
      "type": "integer"
    },
    "autoScalerMin": {
      "default": 3,
      "description": "Specifies the minimum number of virtual machines to create",
      "minimum": 2,
      "type": "integer"
    },
    "machineType": {
      "enum": [
        "Standard_D4_v3",
        "Standard_D8_v3",
        "Standard_D16_v3",
        "Standard_D32_v3",
        "Standard_D48_v3",
        "Standard_D64_v3"
      ],
      "type": "string"
    },
    "name": {
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      },
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "title": "Cluster Name",
      "type": "string"
    },
    "region": {
      "enum": [
        "eastus",
        "centralus",
        "westus2",
        "uksouth",
        "northeurope",
        "westeurope",
        "japaneast",
        "southeastasia"
      ],
      "type": "string"
    }
  },
  "required": [
    "name"
  ],
  "type": "object"
}