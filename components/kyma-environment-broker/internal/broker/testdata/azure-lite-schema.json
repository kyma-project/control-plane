{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region",
    "machineType",
    "autoScalerMin",
    "autoScalerMax"
  ],
  "_show_form_view": true,
  "properties": {
    "autoScalerMax": {
      "default": 10,
      "description": "Specifies the maximum number of virtual machines to create",
      "maximum": 40,
      "minimum": 2,
      "type": "integer"
    },
    "autoScalerMin": {
      "default": 2,
      "description": "Specifies the minimum number of virtual machines to create",
      "minimum": 2,
      "type": "integer"
    },
    "machineType": {
      "_enumDisplayName": {
        "Standard_D4_v3": "Standard_D4_v3 (4vCPU, 16GB RAM)"
      },
      "enum": [
        "Standard_D4_v3"
      ],
      "type": "string"
    },
    "name": {
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      },
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "title": "Cluster Name",
      "type": "string"
    },
    "region": {
      "enum": [
        "eastus",
        "centralus",
        "westus2",
        "uksouth",
        "northeurope",
        "westeurope",
        "japaneast",
        "southeastasia"
      ],
      "type": "string"
    }
  },
  "required": [
    "name"
  ],
  "type": "object"
}