{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region",
    "machineType",
    "autoScalerMin",
    "autoScalerMax"
  ],
  "_show_form_view": true,
  "properties": {
    "autoScalerMax": {
      "default": 20,
      "description": "Specifies the maximum number of virtual machines to create",
      "maximum": 80,
      "minimum": 2,
      "type": "integer"
    },
    "autoScalerMin": {
      "default": 3,
      "description": "Specifies the minimum number of virtual machines to create",
      "minimum": 2,
      "type": "integer"
    },
    "machineType": {
      "enum": [
        "n2-standard-4",
        "n2-standard-8",
        "n2-standard-16",
        "n2-standard-32",
        "n2-standard-48"
      ],
      "type": "string"
    },
    "name": {
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      },
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "title": "Cluster Name",
      "type": "string"
    },
    "region": {
      "enum": [
        "europe-west3",
        "asia-south1",
        "us-central1"
      ],
      "type": "string"
    }
  },
  "required": [
    "name"
  ],
  "type": "object"
}