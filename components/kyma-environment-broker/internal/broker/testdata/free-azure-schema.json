{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region"
  ],
  "_show_form_view": true,
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Cluster Name",
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      }
    },
    "region": {
      "type": "string",
      "enum": [ "eastus", "centralus", "westus2", "uksouth", "northeurope", "westeurope", "japaneast", "southeastasia" ]
    }},
  "required": [
    "name"
  ]
}