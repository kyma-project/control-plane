{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "_controlsOrder": [
    "name",
    "region"
  ],
  "_show_form_view": true,
  "properties": {
    "name": {
      "_BTPdefaultTemplate": {
        "elements": [
          "saSubdomain"
        ]
      },
      "minLength": 1,
      "pattern": "^[a-zA-Z0-9-]*$",
      "title": "Cluster Name",
      "type": "string"
    },
    "region": {
      "enum": [
        "eu-central-1",
        "eu-west-2",
        "ca-central-1",
        "sa-east-1",
        "us-east-1",
        "us-west-1",
        "ap-northeast-1",
        "ap-northeast-2",
        "ap-south-1",
        "ap-southeast-1",
        "ap-southeast-2"
      ],
      "type": "string"
    }
  },
  "required": [
    "name"
  ],
  "type": "object"
}